  <div id="content">
    <section class="main">
      <div class="row">
        <div class="col-xs-12">
          <p>Oui, encore!</p>
        </div>
        <% [["RLX", :workout_location_path, "relax", "color-icons:landscape"],
            ["F!T", :workout_position_path, "fit"    ],
            ["STC", :workout_position_path, "stretch"] ].each do |text_, option_, type_, icon_|%>
          <div class="col-xs-4">
            <%= link_to  self.send( option_, {type: type_} ), class: "btn btn-primary full-width" do %>
              <webicon icon="<%= icon_ %>" >
              </webicon>
              <span class='inner-text'>
                <%= text_ %>
              </span>
            <% end %>
          </div>
        <% end %>
    </section>
  </div>

