
  <div id="content">
    <section class="main">
      <div class="row">
        <div class="col-xs-12">
          <section class="panel">
            <header class="panel-heading text-center">
              Sign up
            </header>

            <%= form_for User.new, url: "/signup", method: "post" , html: {class: "panel-body" } do |f| %>
              <div class="block">
                <label class="control-label">Votre nom</label>
                <%= f.text_field :name, placeholder: "eg. Your name or company", class: "form-control" %>
              </div>
              <div class="block">
                <label class="control-label">Votre adresse email</label>
                <%= f.text_field :email, placeholder: "test@example.com", class: "form-control" %>
              </div>
              <div class="block">
                <label class="control-label">votre mot de passe</label>
                <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
              </div>
              <div class="checkbox">
                <label>
                <%= f.check_box :disclaimer %>Acceptez les <a href="#">conditions</a>
                </label>
              </div>
              <button type="submit" class="btn btn-info">Sign up</button>
            <% end %>

            <div class="panel-body">
              <div class="line line-dashed"></div>
              <div class="row">
                <div class="col-sm-6 text-center">
                   <a href="#" class="btn btn-facebook btn-circle btn-sm"><i class="fa fa-facebook"></i>Inscrivez vous avec Facebook</a>
                </div>
                <div class="col-sm-6 text-center">
                  <a href="#" class="btn btn-twitter btn-circle btn-sm"><i class="fa fa-twitter"></i>Inscrivez vous avec Twitter</a>
                </div>
              </div>
              <div class="line line-dashed"></div>
              <p class="text-muted text-center"><small><%= t "already_account" %></small></p>
              <a href="signin.html" class="btn btn-white btn-block">S'!dentifier</a>
            </div>
          </section>
        </div>
      </div>
    </section>
  </div>
